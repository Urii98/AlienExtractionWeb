        }
    ],
    "liveSassCompile.settings.generateMap": true,  // Genera los mapas de origen para depuración
    "liveSassCompile.settings.autoprefix": ["> 1%", "last 2 versions", "Firefox ESR"]  // Añade prefijos para compatibilidad
}
