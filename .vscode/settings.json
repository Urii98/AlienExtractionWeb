{
    "emmet.preferences": {
        // Puedes dejar esta sección vacía si no tienes preferencias específicas
    },
    "liveSassCompile.settings.formats": [
        {
            "format": "expanded",          // Formato de salida CSS, puede ser "compressed", "expanded", etc.
            "extensionName": ".css",       // Extensión del archivo generado
